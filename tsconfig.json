{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "types": ["node", "svelte"],
    "baseUrl": ".",
    "paths": {
      "src": ["src/*", "tests/*"],
      "~/*": ["src/*"]
    }
  },
  "esModuleInterop": true
}
